    "main": "dist/app.js",
    "scripts": {
        "build": "rimraf dist && tsc",
        "prod": "cross-env NODE_ENV=production node dist/app.js",
        "dev": "cross-env NODE_ENV=development ./node_modules/.bin/nodemon --exec ts-node src/app.ts --watch src",
        "test": "cross-env NODE_ENV=testing ./node_modules/.bin/jest",
        "coverage": "./node_modules/.bin/jest --coverage",
        "format": "./node_modules/.bin/prettier --write \"src/**/*.ts\"",
        "lint": "./node_modules/.bin/eslint ./src --ext .ts",
        "tm:run": "npx ts-node ./node_modules/.bin/typeorm migration:run -f ormconfig",
        "tm:revert": "npx ts-node ./node_modules/.bin/typeorm migration:revert -f ormconfig"
    },
    "dependencies": {
        "@types/moment": "^2.13.0",
        "body-parser": "^1.19.0",
        "cross-env": "^6.0.3",
        "express": "^4.17.1",
        "express-validator": "^6.2.0",
        "moment": "^2.24.0",
        "pg": "^7.12.1",
        "reflect-metadata": "^0.1.13",
        "sqlite3": "^4.1.0",
        "typeorm": "^0.2.19"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.1",
        "@types/express": "^4.17.1",
        "@types/express-validator": "^3.0.0",
        "@types/jest": "^24.0.18",
        "@types/node": "^12.7.12",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "^2.3.2",
        "@typescript-eslint/parser": "^2.3.2",
        "eslint": "^6.5.1",
        "eslint-config-prettier": "^6.4.0",
        "eslint-plugin-prettier": "^3.1.1",
        "jest": "^24.9.0",
        "nodemon": "^1.19.3",
        "prettier": "^1.18.2",
        "rimraf": "^3.0.0",
        "supertest": "^4.0.2",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.4.1",
        "typescript": "^3.6.3"
    }
}
