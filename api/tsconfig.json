{
    "compilerOptions": {
        "lib": ["es5", "es6", "dom"],
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "sourceMap": false,
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/"],
            "typings/*": ["src/typings/*"]
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/tests/**/*.spec.ts"]
}
